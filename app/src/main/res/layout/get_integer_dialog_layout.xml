<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <EditText
        android:id="@+id/get_integer_edittext"
        android:layout_width="@dimen/get_integer_dialog_edittext_width"
        android:layout_height="@dimen/get_integer_dialog_edittext_height"
        android:inputType="number"
        android:digits="0123456789"
        android:hint="@string/_11"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginStart="@dimen/get_integer_dialog_margin"
        android:layout_marginEnd="@dimen/get_integer_dialog_margin"/>
</LinearLayout>
